#!/bin/bash

#Создать скрипт, который создаст директории для нескольких годов (2010 — 2017), в них — поддиректории для месяцев (от 01 до 12),
#и в каждый из них запишет несколько файлов с произвольными записями (например, 001.txt, содержащий текст«Файл 001», 002.txt с текстом Файл 002) и т. д.

mkdir -p 20{10..17}/{01..12} # создаю дирректории в обратной рекурсии
for i in {2010..2017} # запускаю счётчик по дирректориям нижнего уровня
do
    for j in {01..12} # перехожу на счётчик более высокого уровня
    do
		for l in {1..12} # объявляю счётчик для будущих создаваемых файлов
		do
        	echo "Файл 0"$l > $i/$j/file0$l.txt # записываю пошагово с присваиванием сообщений в соответствии с именами файлов
		done
    done
done